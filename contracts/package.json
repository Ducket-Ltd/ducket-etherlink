{
  "name": "ducket-etherlink-contracts",
  "version": "1.0.0",
  "description": "Ducket NFT ticketing smart contracts for Etherlink",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.ts --network etherlinkTestnet",
    "deploy:v2": "hardhat run scripts/deploy-v2.ts --network etherlinkTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy-v2.ts --network etherlink",
    "deploy:local": "hardhat run scripts/deploy.ts --network hardhat",
    "console": "hardhat console --network etherlinkTestnet",
    "clean": "hardhat clean"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-viem": "^2.1.3",
    "@openzeppelin/contracts": "^5.1.0",
    "dotenv": "^16.4.5",
    "hardhat": "^2.22.18",
    "viem": "^2.43.5"
  }
}
